Header always set Feature-Policy: "accelerometer 'none'; camera 'none'; fullscreen 'none'; geolocation 'none'; gyroscope 'none'; magnetometer 'none'; microphone 'none'; midi 'none'; notifications 'none'; payment 'none'; push 'none'; speaker 'none'; sync-xhr 'none'; usb 'none'; usermedia 'none'; vibrate 'none'"
Header always set Expect-CT: "max-age=604800, enforce"
Header always set Referrer-Policy: no-referrer-when-downgrade
